{
  "name": "@uttr/tint",
  "type": "module",
  "version": "0.1.3",
  "description": "Yet another fast and minimalist console color utility",
  "author": "Kohane <i@kept.to>",
  "license": "MIT",
  "homepage": "https://github.com/utakotoba/uttr-tint#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utakotoba/uttr-tint.git"
  },
  "bugs": {
    "url": "https://github.com/utakotoba/uttr-tint/issues"
  },
  "keywords": [
    "console",
    "color"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "simple-git-hooks",
    "typecheck": "tsc --noEmit",
    "dev": "tsdown --watch",
    "build": "tsdown",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@types/bun": "^1.3.4",
    "bun": "^1.3.4",
    "chalk": "^5.6.2",
    "eslint": "^9.39.2",
    "jiti": "^2.6.1",
    "kleur": "^4.1.5",
    "lint-staged": "^16.2.7",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.16.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "yoctocolors": "^2.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
